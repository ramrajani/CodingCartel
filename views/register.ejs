<% include partials/header.ejs %>
<% include partials/middle.ejs %>

<div id="login" style="padding-top:0">
    <h3 class="text-center text-white pt-5">Register form</h3>
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" class="form" action="/register" method="POST">
                        <h3 class="text-center text-info">Register</h3>
                        <div class="form-group">
                            <label for="username" class="text-info">Username:</label><br>
                            <input type="text" name="username" id="username" class="form-control" readonly required>
                        </div>
                        
  
      <div class="form-group">
        <label  class="text-info">FullName:</label>
        <input type="text" class="form-control" id="fullname" name="fullname" placeholder="martin" >
      </div>
    
      <div class="form-group">
        <label for="inputEmail4" class="text-info">Email</label>
        <input type="email" class="form-control"  id="email" name="email" placeholder="Email">
      </div>
      
               <div class="form-group">
        <label class="text-info">Image URL:</label>
        <input type="url" class="form-control" id="url" name="url"  placeholder="https://www.myimage.com" >
      </div>

      
    </div>
      <div class="form-row">
        <div class="col-md-1"></div>
      <div class="form-group col-md-5">
        <label for="inputEmail4" class="text-info">city</label>
        <input type="text" class="form-control" id="city" placeholder="" name="city">
      </div>
      <div class="form-group col-md-5">
        <label class="text-info">Country</label>
        <input type="text" class="form-control"id="country"  placeholder=""  name="country">
      </div>
      </div>
      <div class="form-row">
          <div class="col-md-1"></div>
          <div class="form-group col-md-5">
                <label class="text-info">State</label>
                <input type="text" class="form-control" id="state" placeholder="Coder" name="state">
              </div>
      <div class="form-group col-md-5">
        <label class="text-info">occupation</label>
        <input type="text" class="form-control" id="occupation" placeholder="Coder" name="occupation">
      </div>
      </div>
      <div class="form-row">
            <div class="col-md-1"></div>
              <div class="form-group col-md-5">
        <label class="text-info">Organization</label>
        <input type="text" class="form-control" id="organization" placeholder="Abc" name="organization">
      </div>
      <div class="form-group col-md-5">
            <label class="text-info">Band</label>
            <input type="text" class="form-control" id="band" name="band" readonly>
          </div>
    </div>

                        <div class="form-group">
                            <label for="password" class="text-info">Password:</label><br>
                            <input type="password" name="password" id="password" class="form-control" required>
                        </div>
                        <div class="form-group">
                           <input type="submit" name="submit" id="submit" class="btn btn-info btn-md" value="submit">
                        </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
var json = <%- JSON.stringify(Username) %>;
var user = JSON.parse(json);
 $('#username').val(user.username); 
 $('#fullname').val(user.fullname);
  $('#city').val(user.city.name);
  $('#state').val(user.state.name);
  $('#country').val(user.country.name);
  $('#occupation').val(user.occupation);
  $('#organization').val(user.organization);
  $('#band').val(user.band);


</script>

