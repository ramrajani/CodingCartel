<% include partials/header.ejs %>
<% include partials/middle.ejs %>


<form class="container" style="margin-top: 10px" method="POST" action="/editprofile?_method=PUT" >

  <div class="form-row">
      <div class="col-md-3"></div>
    <div class="form-group  col-md-6">
      <label class="text-info">FullName:</label>
      <input type="text" class="form-control" id="fullname" name="fullname" placeholder="martin" >
    </div>
    </div>
  <div class="form-row">
  	<div class="col-md-3"></div>
    <div class="form-group col-md-3">
      <label for="inputEmail4" class="text-info">Email</label>
      <input type="email" class="form-control" id="inputEmail4"  id="email" name="email" placeholder="Email">
    </div>
    <div class="form-group col-md-3">
      <label class="text-info" >Image URL:</label>
      <input type="url" class="form-control" id="url" name="url"  placeholder="https://www.myimage.com" >
    </div>
    
  </div>
    <div class="form-row">
  	<div class="col-md-3"></div>
    <div class="form-group col-md-3">
      <label for="inputEmail4" class="text-info">city</label>
      <input type="text" class="form-control" id="city" placeholder="" name="city">
    </div>
    <div class="form-group col-md-3">
      <label class="text-info">Country</label>
      <input type="text" class="form-control"id="country"  placeholder=""  name="country">
    </div>
    </div>
    <div class="form-row">
    	<div class="col-md-3"></div>
    <div class="form-group col-md-3">
      <label class="text-info">occupation</label>
      <input type="text" class="form-control" id="occupation" placeholder="Coder" name="occupation">
    </div>
    <div class="form-group col-md-3">
        <label class="text-info">State</label>
        <input type="text" class="form-control" id="state" placeholder="Coder" name="state">
      </div>
   </div>
   <div class="form-row">
      <div class="col-md-3"></div>
    <div class="form-group col-md-6">
        <label class="text-info">Organization</label>
        <input type="text" class="form-control" id="organization" placeholder="Abc" name="organization">
      </div>
     </div> 
    <div class="form-row">
        <div class="col-md-3"></div>
    <div class="form-group  col-md-6">
      
      <input type="submit" class="form-control btn btn-primary" value="update" >
    </div>
    </div>
</form>        

<script>
 var user =<%- JSON.stringify(CurrentUser) %>;
 console.log(user);
  $('#fullname').val(user.fullname);
  $('#email').val(user.emailid);
  $('#url').val(user.iamge);
  $('#city').val(user.city);
  $('#country').val(user.country);
  $('#occupation').val(user.occupation);
  $('#organization').val(user.organization);





  </script>
